<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_default_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Default Notification" />
    <Button
        android:id="@+id/btn_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Custom Notification" />
    <Button
        android:id="@+id/btn_cancle_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Cancle Notification" />

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Toast" />
    <Button
        android:id="@+id/btn_custom_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Custom Toast" />

</LinearLayout>
